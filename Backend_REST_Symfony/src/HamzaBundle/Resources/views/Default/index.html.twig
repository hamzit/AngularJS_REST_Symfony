                            <div class="form-group">
                                <input type="number" name="age" id="age" tabindex="5" class="form-control" placeholder="Age" min="0" required>
                            </div>
                            <div class="form-group">
                                <input type="text" name="race" id="race" tabindex="6" class="form-control" placeholder="Race" required>
                            </div>
                            <div class="form-group">
